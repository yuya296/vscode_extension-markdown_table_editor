{
  "name": "markdown-table-editor",
  "displayName": "Markdown Table Editor",
  "description": "Markdownファイル内のテーブルをExcelライクなUIで編集できるVSCode拡張機能",
  "version": "0.1.0",
  "publisher": "your-name",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:markdown-table-editor.addTable",
    "onCommand:markdown-table-editor.editTable"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "markdown-table-editor.addTable",
        "title": "Add Table"
      },
      {
        "command": "markdown-table-editor.editTable",
        "title": "Edit Table"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorTextFocus",
          "command": "markdown-table-editor.addTable",
          "group": "navigation"
        },
        {
          "when": "editorTextFocus",
          "command": "markdown-table-editor.editTable",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile && npm run build:webview",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "build:webview": "node ./esbuild.webview.mjs",
    "watch:webview": "node ./esbuild.webview.mjs --watch",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js"
  },
  "dependencies": {
    "@toast-ui/react-grid": "^4.21.22",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "tui-grid": "^4.21.22"
  },
  "devDependencies": {
    "@types/node": "^22.15.2",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@types/vscode": "^1.70.0",
    "esbuild": "^0.25.3",
    "esbuild-sass-plugin": "^3.3.1",
    "tslint": "^6.1.3",
    "typescript": "^4.9.5",
    "vscode-test": "^1.5.2"
  }
}
